<Window x:Class="SoundAdjusterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundAdjusterApp"
        xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="SoundAdjuster" Height="175" Width="263">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <oxy:PlotView Model="{Binding _plotModel}"/>
        <tb:TaskbarIcon x:Name="NotifyIcon"
                        ToolTipText="Sound Adjuster"
                        Visibility="Visible"
                        TrayLeftMouseDown="TrayLeftMouseDownHandler">

            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Adjust"
                              Command="{Binding AdjustCommand}">
                    </MenuItem>
                    <MenuItem Header="Stop"
                              Command="{Binding StopCommand}">
                    </MenuItem>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
